{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2017",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      ".test/*": [".test/*"],
      ".data/*": [".data/*"],
      ".mocks/*": [".mocks/*"],
    },
    // "outDir": "./out",
  },
  "include": ["./src/**/*.ts", "./.shims/**/*.d.ts"],
  "exclude": ["node_modules"]
}